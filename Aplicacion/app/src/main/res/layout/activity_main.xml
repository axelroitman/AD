<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E5E5"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/applogo" />

    <TextView
        android:id="@+id/txtnombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="ClinicApp"
        android:textColor="#453333"
        android:textSize="40dp"
        android:typeface="sans" />


    <EditText
        android:id="@+id/txtusuario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnombreApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_light"
        android:hint="Ingrese su usuario"
        android:textColor="#0B0A0A" />

    <EditText
        android:id="@+id/txtcontrasena"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtusuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Ingrese su contraseÃ±a"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btningresar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcontrasena"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="#0C084C"
        android:fontFamily="@font/roboto_light"
        android:text="ingresar"
        android:textColor="#FFFFFF" />

</RelativeLayout>