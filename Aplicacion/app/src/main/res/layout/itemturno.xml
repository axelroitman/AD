<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:background="#E8E5E5">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#E8E5E5"
            android:layout_height="wrap_content">

            <!--- PRIMER TURNO -->
            <RelativeLayout
                android:id="@+id/itemTurno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <!---contenedor fecha-->
                <RelativeLayout
                    android:layout_width="184dp"
                    android:layout_height="102dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="297dp"
                    android:background="#498EB8">

                    <TextView
                        android:id="@+id/txtDiaTurno1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/roboto_condensed_bold_italic"
                        android:text="04"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/txtDiaSemanaTurno1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="65dp"
                        android:fontFamily="@font/roboto_condensed_bold_italic"
                        android:text="Martes"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/txtMesTurno1"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="37dp"
                        android:fontFamily="@font/roboto_condensed_bold_italic"
                        android:text="MAY."
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp" />

                </RelativeLayout>

                <!---contenedor especialidad-->
                <RelativeLayout
                    android:id="@+id/infoTurnoMedico"
                    android:layout_width="216dp"
                    android:layout_height="102dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="94dp"
                    android:background="#BCFFFFFF">

                    <TextView
                        android:id="@+id/txtHorario1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:text="12:00hs"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txtMedico1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtHorario1"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="14dp"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:text="MarÃ­a Fernanda Sanchez"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txtEspecialidad1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtMedico1"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="84dp"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:text="CardiologÃ­a"
                        android:textSize="18dp" />
                </RelativeLayout>

                <!---contenedor estado-->

                <!---contenedor asistencia-->

                <RelativeLayout
                    android:id="@+id/infoTurnoEstado"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="@+id/infoTurnoMedico"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="15dp"
                    android:background="#498EB8">

                    <TextView
                        android:id="@+id/txtestado4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/roboto_light_italic"
                        android:text="Estado"
                        android:textColor="@android:color/white"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/imgestado4"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_below="@+id/txtestado4"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="29dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="28dp"
                        android:src="@drawable/notok" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/infoTurnoAsistencia"
                    android:layout_height="49dp"
                    android:layout_width="80dp"
                    android:layout_alignParentStart="@+id/infoTurnoEstado"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="54dp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignLeft="@+id/infoTurnoEstado"
                    android:layout_alignRight="@+id/infoTurnoEstado"
                    android:background="#91D2FA">

                    <TextView
                        android:id="@+id/txtasistencia4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/roboto_light_italic"
                        android:text="Asistió"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/imgasistencia4"
                        android:layout_width="18dp"
                        android:layout_height="21dp"
                        android:layout_below="@+id/txtasistencia4"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="28dp"
                        android:src="@drawable/asistenciaok" />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>