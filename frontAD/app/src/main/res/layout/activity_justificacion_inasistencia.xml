<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E8E5E5"
    tools:context=".JustificacionInasistencia">

    <ImageView
        android:id="@+id/logo3"
        android:layout_width="74dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/applogo" />

    <TextView
        android:id="@+id/nombre3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="42dp"
        android:layout_toEndOf="@+id/logo3"
        android:fontFamily="@font/roboto_light"
        android:text="Turno 25 de Junio"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/roboto_light"
            android:text="Justificación:"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="173dp"
            app:srcCompat="@drawable/reloj" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_below="@+id/imageView13"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/justificacion" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="175dp"
            android:fontFamily="@font/roboto_light"
            android:text="Hora: 12:00."
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="154dp"
            android:layout_height="146dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="373dp"
            app:srcCompat="@drawable/asistenciaNo" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="85dp"
            android:layout_toStartOf="@+id/imageView14"
            android:fontFamily="@font/roboto_light"
            android:text="No Asistiré"
            android:textSize="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="97dp"
            android:background="@drawable/bordeedittext"
            android:hint="Escriba aquí"
            android:fontFamily="@font/roboto_light"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="106dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="66dp"
            android:layout_marginBottom="29dp"
            android:backgroundTint="#F44336"

            android:fontFamily="@font/roboto_light"
            android:text="Cancelar"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="106dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="63dp"
            android:layout_marginBottom="27dp"
            android:layout_toEndOf="@+id/button"
            android:backgroundTint="#4CAF50"
            android:text="Confirmar"
            android:fontFamily="@font/roboto_light"
            />

    </RelativeLayout>

</RelativeLayout>