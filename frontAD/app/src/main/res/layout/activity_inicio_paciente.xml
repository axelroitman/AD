<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E5E5"
    android:orientation="vertical"
    tools:context=".inicioPaciente">

    <RelativeLayout
        android:id="@+id/layoutUno"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:background="#13AEC6"
        android:backgroundTint="#74EFBA"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/agenda" />

        <Button
            android:id="@+id/btnVerMisTurnos"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#0C084C"
            android:fontFamily="@font/roboto_light"
            android:text="Mis Turno"
            android:textColor="#FFFFFF" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/layoutUno"
        android:background="#74EFBA"
        android:backgroundTint="#74EFBA"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/add" />

        <Button
            android:id="@+id/btnNuevoTurno"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#0C084C"
            android:fontFamily="@font/roboto_light"
            android:text="Nuevo Turno"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutTres"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/layoutUno"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:background="#74EFBA"
        android:backgroundTint="#74EFBA"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/close" />

        <Button
            android:id="@+id/btnConsultasAnteriores"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#0C084C"
            android:fontFamily="@font/roboto_light"
            android:text="Cancelar Turno"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutCuatro"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/layoutDos"
        android:layout_alignTop="@id/layoutTres"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/layoutTres"
        android:background="#FFFFFF"
        android:backgroundTint="#74EFBA"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/back" />

        <Button
            android:id="@+id/btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#0C084C"
            android:fontFamily="@font/roboto_light"
            android:text="Ver Consultas Anteriores"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>