<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E5E5"
    android:orientation="vertical"
    tools:context=".inicio_medico">


    <TextView
        android:id="@+id/nombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="49dp"
        android:layout_toEndOf="@+id/logo2"
        android:fontFamily="@font/roboto_light"
        android:text="ClinicApp"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="74dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/applogo" />

    <RelativeLayout
        android:id="@+id/layoutDos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/LayoutMensaje"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="41dp"
        android:layout_toRightOf="@id/layoutUno"
        android:background="#74EFBA"
        android:backgroundTint="#74EFBA"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/lapiz" />

        <Button
            android:id="@+id/btnNuevoTurno"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#498EB8"
            android:fontFamily="@font/roboto_light"
            android:text="Modificar Agenda"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutUno"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/LayoutMensaje"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="41dp"
        android:background="#13AEC6"
        android:backgroundTint="#74EFBA"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/agenda" />

        <Button
            android:id="@+id/btnVerMisTurnos"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#498EB8"
            android:fontFamily="@font/roboto_light"
            android:text="Ver mi agenda"
            android:textColor="#FFFFFF" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutTres"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/layoutDos"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="41dp"
        android:layout_toRightOf="@id/layoutUno"
        android:background="#74EFBA"
        android:backgroundTint="#74EFBA"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/add" />

        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#498EB8"
            android:fontFamily="@font/roboto_light"
            android:text="Añadir Turnos"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutCinco"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/layoutUno"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="41dp"
        android:background="#13AEC6"
        android:backgroundTint="#74EFBA"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/back" />

        <Button
            android:id="@+id/btnAddTurnos"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView8"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#498EB8"
            android:fontFamily="@font/roboto_light"
            android:text="Historial de agenda"
            android:textColor="#FFFFFF" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="423dp"
        android:layout_toEndOf="@+id/layoutUno"
        app:srcCompat="@drawable/bookmark" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="25dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="162dp"
        android:layout_marginTop="422dp"
        android:layout_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/bookmark" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="25dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="614dp"
        android:layout_marginEnd="202dp"
        app:srcCompat="@drawable/bookmark" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="25dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="14dp"
        app:srcCompat="@drawable/bookmark" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="13dp"
        android:background="#BCFFFFFF"
        android:textAlignment="center"
        android:id="@+id/LayoutMensaje">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="245dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="27dp"
            android:fontFamily="@font/roboto_light_italic"
            android:text="Buen día Adrián Roccatagiliata. Hoy tiene 12 turnos entre las 09:15hs y las 19:45hs. Mañana no tiene turnos."
            android:textAlignment="center"
            android:textSize="15dp" />
    </RelativeLayout>


</RelativeLayout>