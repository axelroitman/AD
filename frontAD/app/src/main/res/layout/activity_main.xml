<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E5E5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/logofinal" />

    <TextView
        android:id="@+id/txtnombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="ClinicApp"
        android:textColor="#453333"
        android:textSize="40dp"
        android:typeface="sans" />


    <EditText
        android:id="@+id/txtusuario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnombreApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Ingrese su usuario"
        android:textColor="#0B0A0A" />

    <EditText
        android:id="@+id/txtcontrasena"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtusuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Ingrese su contraseña"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btningresar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcontrasena"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFF"
        android:background="#0C084C"
        android:text="ingresar" />

    <TextView
        android:id="@+id/tvregistrarse"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btningresar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="¿olvido su contraseña?"
        android:textColor="#0B0A0A" />

</RelativeLayout>